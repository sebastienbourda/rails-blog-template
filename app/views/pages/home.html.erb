
<section class="space-y-16">
  <header class="flex justify-between w-full">
    <div>
      <% if signed_in? %>
        <h1 class="text-xl font-bold">Welcome back <span class="capitalize"><%= current_user.first_name %></span></h1>
      <% else %>
        <h1 class="text-xl font-bold">Welcome to your Rails App</h1>
      <% end %>
      <p>Change anything in this page</p>
    </div>

    <ul class="flex gap-4 items-center">
      <li>
        <%= link_to "Sign up", new_signup_path, class: "rounded-md bg-sky-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-sky-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-600" %>
      </li>
      <li>
        <%= link_to "Log in", login_path, class: "rounded-md bg-sky-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-sky-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-600" %>
      </li>
      <li>
        <%= link_to "Log out", logout_path, method: :delete, class: "rounded-md bg-sky-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-sky-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-600" %>
      </li>
    </ul>
  </header>

</section>
