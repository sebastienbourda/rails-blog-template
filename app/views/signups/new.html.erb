<div class="flex min-h-full items-center justify-center mt-16 px-4 py-12 sm:px-6 lg:px-8">
  <div class="w-full max-w-sm space-y-10">
    <div>
      <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Sign up</h2>
      <p class="text-center text-lg tracking-tight text-gray-900">Enter your information below to create an account.</p>
      <% if @user.errors.any? %>
        <div id="error_explanation" class="bg-red-100 my-4 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <strong class="font-bold">Oops!</strong>
          <span class="block sm:inline"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</span>
          <ul class="list-disc list-inside">
            <% @user.errors.full_messages.each do |user| %>
              <li><%= user %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <%= render "form" %>
  </div>
</div>
